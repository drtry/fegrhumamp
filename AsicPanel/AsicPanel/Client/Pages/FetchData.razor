@page "/fetchdata"
@using AsicPanel.Shared
@using AsicPanel.Shared.Entities
@using AsicPanel.Shared.Entities.Innosilicon
@inject HttpClient Http
@using AsicPanel.Shared.Managers

@inject IInnosiliconService _innosiliconService
@inject ISettingsService _settingsService

@if (!settingsResult.Success)
{
    <p>@settingsResult.Message</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>IP</th>
                <th>Type</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var device in settingsResult.Data.Devices)
            {
                bool status = false;
                var authResult = _innosiliconService.AuthAsync(device);
                status = authResult.Result.Success;
                <tr>
                    <td>@device.Ip</td>
                    <td>@device.Type</td>
                    <td>@status</td>
                </tr>
                @if (authResult.Result.Success)
                {
                    status = true;
                    var summResult = _innosiliconService.GetSummaryDevice(device);
                    @if (summResult.Result.Success)
                    {
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Enabled</th>
                                    <th>Status</th>
                                    <th>Temperature</th>
                                    <th>HashRate</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var dev in summResult.Result.Data.DEVS)
                                {
                                    <tr>
                                        <td>@dev.Name</td>
                                        <td>@dev.Enabled</td>
                                        <td>@dev.Status</td>
                                        <td>@dev.Temperature</td>
                                        <td>@dev.HashRate</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                }
            }
        </tbody>
    </table>
}

@if (settingsResult == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <ul>
    </ul>
}

@code {
    private Result<Settings> settingsResult;

    protected override async Task OnInitializedAsync()
    {
        settingsResult = await Http.GetFromJsonAsync<Result<Settings>>("Config/Settings");

    }
}
